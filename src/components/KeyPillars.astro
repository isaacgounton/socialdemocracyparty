---
import { UsersIcon, HeartIcon, UserGroupIcon } from '@heroicons/react/24/outline';

const pillars = [
  {
    title: 'Meet Neighbors',
    description: 'Connect with fellow Canadians in your local area to build strong community bonds.',
    icon: UsersIcon,
  },
  {
    title: 'Value Diversity',
    description: 'Embrace different perspectives and experiences to create inclusive solutions.',
    icon: HeartIcon,
  },
  {
    title: 'Compromise for Consensus',
    description: 'Work together to find common ground and make decisions that benefit everyone.',
    icon: UserGroupIcon,
  },
];
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-sdp-navy sm:text-4xl">Our Key Pillars</h2>
      <p class="mt-4 text-lg text-gray-600">Building a stronger democracy through community engagement</p>
    </div>
    <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {pillars.map((pillar) => (
        <div class="relative p-8 bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col">
          <div class="flex-1">
            <div class="w-12 h-12 bg-sdp-green/10 rounded-lg flex items-center justify-center mb-4">
              <pillar.icon className="w-6 h-6 text-sdp-green" aria-hidden="true" />
            </div>
            <h3 class="text-xl font-semibold text-sdp-navy">{pillar.title}</h3>
            <p class="mt-4 text-base text-gray-500">{pillar.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>