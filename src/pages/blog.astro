---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const posts = [
  {
    title: 'Building Consensus in Diverse Communities',
    excerpt:
      'Learn effective strategies for bringing together neighbors with different perspectives to find common ground.',
    author: 'Sarah Chen',
    date: 'March 15, 2025',
    category: 'Consensus Building',
    href: '#',
  },
  {
    title: 'From Neighbors to Change-Makers',
    excerpt:
      'How small groups of committed citizens are transforming their communities through grassroots action.',
    author: 'Michael Thompson',
    date: 'March 10, 2025',
    category: 'Community Action',
    href: '#',
  },
  {
    title: 'The Power of Local Democracy',
    excerpt:
      'Exploring successful examples of citizen-led decision making from around the world.',
    author: 'Marie Leblanc',
    date: 'March 5, 2025',
    category: 'Policy Ideas',
    href: '#',
  },
];
---

<Layout
  title="Blog"
  description="Read the latest updates, success stories, and insights about participatory democracy and community organizing from SDP Canada."
>
  <Header />
  <main class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-sdp-navy sm:text-5xl">Latest Updates</h1>
        <p class="mt-4 text-xl text-gray-600">
          Stories and insights from our growing movement
        </p>
      </div>

      <div class="mt-12 grid gap-8 lg:grid-cols-2">
        {
          posts.map((post) => (
            <article class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex items-center gap-2">
                <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-sdp-green/10 text-sdp-green">
                  {post.category}
                </span>
                <time class="text-sm text-gray-500">{post.date}</time>
              </div>
              <a href={post.href} class="block mt-4">
                <h2 class="text-xl font-semibold text-sdp-navy hover:text-sdp-navy/90">
                  {post.title}
                </h2>
                <p class="mt-3 text-gray-600">{post.excerpt}</p>
              </a>
              <div class="mt-4">
                <p class="text-sm text-gray-500">By {post.author}</p>
              </div>
            </article>
          ))
        }
      </div>

      <div class="mt-16 bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-sdp-navy">Share Your Story</h2>
        <p class="mt-4 text-gray-600">
          Have a success story from your zone team? Want to share insights about community organizing?
          We want to hear from you!
        </p>
        <a
          href="#"
          class="mt-6 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-sdp-orange hover:bg-sdp-orange/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sdp-orange"
        >
          Submit Your Story
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>